pipeline {
    agent any 
    
    stages {
        stage('Stage 1') {
            steps {
                echo "APK URL = ${params.APK_DOWNLOAD_PATH}"
                echo "APK URL = ${params.APK_DEPLOY_PATH}   "
                sh "rm -rf ${params.APK_DEPLOY_PATH}/*"
                
            
                sh "curl -O  com.tuc.trueid.apk ${params.APK_DOWNLOAD_PATH}"

                sh "mv com.tuc.trueid.apk  ${params.APK_DEPLOY_PATH}/"
                
            }
        }
    }
}